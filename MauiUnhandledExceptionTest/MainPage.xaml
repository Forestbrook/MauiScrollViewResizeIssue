<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiUnhandledExceptionTest.MainPage">

    <Grid RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="10" Padding="20">
        <Label Grid.Row="0" Text="Unhandled Exception Test" FontSize="32" HorizontalOptions="Center" />
        <Button Grid.Row="1" Text="Show saved exception" Clicked="OnShowExceptionClicked" />
        <Button Grid.Row="2" Text="Throw Exception" Clicked="OnThrowExceptionClicked" />
        <Label Grid.Row="3" x:Name="_resultLabel" HorizontalOptions="Center"/>
    </Grid>

</ContentPage>